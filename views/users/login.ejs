<% layout('layout/boilerplate') %>
<h1>Sign In!</h1>
<form action="/login" class="validation" method="POST" novalidate>
  <div class="mb-3">
    <label class="form-label" for="username">Username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
  </div>
  
  <div class="mb-3">
    <label class="form-label" for="password">Password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      placeholder="********"
      required
    />
  </div>
  <div class="mb-3">
    <button class="btn btn-success">Sign In</button>
    <p>Don't have an account? <a href="/register">Sign Up</a></p>
  </div>
</form>

